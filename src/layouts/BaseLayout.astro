---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/global.css';
---

<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Derin Akademi</title>

    <!-- Preload fotoğraflar -->
    <link rel="preload" as="image" href="/images/foto1.png" />
    <link rel="preload" as="image" href="/images/foto2.png" />
    <link rel="preload" as="image" href="/images/foto3.png" />

    <!-- External kütüphaneler -->
    <script defer src="https://unpkg.com/@rive-app/canvas"></script>
    <script defer src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    
    <!-- GSAP defaults -->
    <script is:inline>
      if (window.gsap && window.ScrollTrigger) {
        gsap.registerPlugin(ScrollTrigger);
        gsap.config({ nullTargetWarn: false });
        
        // Global GSAP defaults
        gsap.defaults({
          ease: 'power2.out',
          duration: 0.8
        });
      }
    </script>
</head>

<body>
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
    <script type="module" src="/src/scripts/script.js" is:inline></script>
</body>
</html>